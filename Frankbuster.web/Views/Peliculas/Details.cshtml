    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Peliculas" asp-action="create">Crear</a>
</p>
