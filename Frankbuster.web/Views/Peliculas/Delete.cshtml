@model BlockBuster.manager.Entidades.Pelicula

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>Estás seguro de eliminar esto?</h3>
<div>
    <h4>Pelicula</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Pelicula ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pelicula_id)
        </dd>
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.titulo)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dt class = "col-sm-2">
            Fecha Publicacíon
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fecha_publicacion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-controller="Peliculas" asp-action="Details">Volver</a>
    </form>
</div>
